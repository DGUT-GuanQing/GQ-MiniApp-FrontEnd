/* pages/my/my.wxss */
.top {
  height: 75rpx;
  display: flex;
  align-items: center;
  font-size: 36rpx;
  font-weight: 600;
}
.scan{
  width: 190rpx;
}
.top .title{
  margin-left: 160rpx;
}
.scan image{
  margin-left: 60rpx;
  width: 70rpx;
}
.avatar{
  margin-top: 60rpx;
  display: flex;
  justify-content: center;
  background-color:transparent;
}
.avatar::after{
  border: none;
}
.avatar image{
  width: 260rpx;
  height: 265rpx;
  border-radius: 800rpx;
  box-shadow: 2rpx 2rpx 20rpx 0rpx rgba(0, 0, 0, 0.04);
}
.message{
  margin-top: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.message .name{
  font-size: 48rpx;
  font-weight: 500;
 
}
.weui-input{
  text-align: center;
 /* color: rgba(1, 2, 27, 1); */
 color: rgba(173, 173, 178, 1);
}
.message .numberAndCollege{
  margin-top: 10rpx; 
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(173, 173, 178, 1);
}
.center{
  margin:30rpx 60rpx 0 60rpx;
  display: flex;
  justify-content: space-between;
}
.center .card{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 160rpx;
  height: 250rpx;
  opacity: 1;
  border-radius: 16rpx;
  box-shadow: 2rpx 2rpx 20rpx 0rpx rgba(0, 0, 0, 0.04);
  left: 80px;
  /** 文本*/
  font-size: 30rpx;
  font-weight: 400;
  color: rgba(105, 105, 105, 1);
}
.center .card text{
  margin-top: 50rpx;
}
.center .card image{
  margin-top: 30rpx;
  width: 80rpx;
}
.bottom {
  margin: 15rpx 30rpx 0 30rpx ;
}
.bottom .title{
  font-size: 36rpx;
  color: rgba(36, 76, 44, 1);
  font-weight: 600;
  height: 90rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.bottom .cuttingLine{
  display: flex;
}
.bottom .cuttingLine .line1{
  width: 30%;
  height: 6rpx;
  border-radius: 8px;
  background: rgba(102, 233, 135, 1);
}
.bottom .cuttingLine .line2{
  width: 70%;
  height: 8rpx;
  border-radius: 8px;
  background: rgba(171, 240, 191, 1);
}
.bottom .photo image{
  width: 100%;
  border-radius: 24px;
}
.bottom .photo{
  margin-top: 30rpx;
  box-shadow: 0px 2px 20px 0px rgba(0, 0, 0, 0.02);
}

/* 推文 */
.tweet{
  box-sizing: border-box;
  margin:9rpx 30rpx 45rpx 30rpx;
}

