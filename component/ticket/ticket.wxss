/* component/ticket/ticket.wxss */
.wrapper {
  position: relative;
}

.item {
  width: 628rpx;
  height: 258rpx;
  border-radius: 10rpx;
  background-color: rgba(255, 255, 255, 1);


  display: flex;
  flex-direction: row;

  padding: 22rpx 30rpx;

  margin-bottom: 30rpx;
}

.left {
  width: 215rpx;
  height: 215rpx;
  overflow: hidden;
  border-radius: 5rpx;

  margin-top: 20rpx;
}

.left .floatcard {

  position: absolute;

  left: 0;
  top: 0;

  width: 103.01rpx;
  height: 37.14rpx;  
  border-bottom-right-radius:10rpx;
  border-top-left-radius:10rpx;


  /* background-image: url("../../image/icon/my-ticket-floatcard.png");*/

  text-align: center;
  font-size: 24rpx;
  font-weight: 400;
  letter-spacing: 0.5rpx;
  line-height: 34.75rpx;
  color: rgba(255, 255, 255, 1);

}
.card1{
  background: rgba(239, 91, 84, 1);
}
.card2{
  background: rgba(0, 167, 79, 1);
}
.left image {
  border-radius: 5rpx;
}

.right {
  width: 391rpx;
  margin-left: 30rpx;
  font-size: 24rpx;

  display: flex;
  flex-direction: column;
  justify-content: space-around;

}

.righttop {
  font-size: 30rpx;
  font-weight: 400;
  font-weight: bold;
  letter-spacing: 0rpx;
  line-height: 43.44rpx;
  color: rgba(26, 26, 26, 1);
}

.rightbottom1 {
  font-size: 24rpx;
  font-weight: 400;
  line-height: 34.75rpx;
  color: rgba(153, 153, 153, 1);
}

.rightbottom2 {
  font-size: 20rpx;
  font-weight: 400;
  line-height: 28.96rpx;
  color: rgba(153, 153, 153, 1);
}