/* my/pages/myMessage/myMessage.wxss */
.wrapper {
  padding: 60rpx;
}

.basicInformation {
  width: 630rpx;
  height: 150rpx;
  /* background-color: aqua; */

  border-bottom: 0.5rpx solid rgba(238, 238, 238, 1);

}

.name {

  font-size: 36rpx;
  font-weight: 400;
  letter-spacing: 0rpx;
  line-height: 31.2rpx;
  color: rgba(1, 2, 27, 1);

  vertical-align: top;
}

.basic2 {

  font-size: 24rpx;
  font-weight: 400;
  letter-spacing: 0rpx;
  line-height: 25.6rpx;
  color: rgba(173, 173, 178, 1);
  margin-top: 20rpx;
}

/* 联系方式模块 */
.contact {

  width: 630rpx;
  height: 200rpx;
  /* background-color: aqua; */

  border-bottom: 0.5rpx solid rgba(238, 238, 238, 1);

  display: flex;
  flex-direction: column;
  justify-content: center;
}

.contactview {
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
}
.contactText{
  margin-left: 14Frpx;
}

/* 期望工作模块 */
.wantJob {
  width: 630rpx;
  height: 280rpx;
  /* background-color: aqua; */
  margin-top: 60rpx;
}

.greenpoint {

  font-weight: 700;

  color: rgba(0, 167, 79, 1);
}

.itemTitle {
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(56, 56, 56, 1);
}

.itemContent {

  font-size: 28rpx;
  font-weight: 400;
  color: rgba(1, 2, 27, 1);
}

.others {

  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.aBigItem {
  width: 300rpx;
  margin-top: 14rpx;
}

/* 按钮 */

.bottomButton {

  width: 750rpx;
  height: 95rpx;
  background: rgba(0, 167, 79, 1);

  font-size: 36rpx;
  line-height: 95rpx;
  color: rgba(255, 255, 255, 1);
  letter-spacing: 2rpx;
  text-align: center;


  position: absolute;
  bottom: 0;

}

